{
    "name": "hc-office-supplies",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "https://github.com/ancutamezi/hc-office-supplies/",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "@sap/hdbext": "^7.0.1",
        "@sap/xssec": "^3.2.13",
        "express": "^4",
        "hdb": "^0.18.3",
        "passport": "^0.6.0",
        "sap-hdbext-promisfied": "^2.202108.1"
    },
    "devDependencies": {
        "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
        "@sap/ux-specification": "^1.100.4",
        "@sapui5/ts-types": "^1.92.2",
        "eslint": "^7.32.0",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana"
            },
            "uaa": {
                "kind": "xsuaa",
                "credentials": {}
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/officesuppliesapp",
        "app/productsapp",
        "app/fiorios",
        "app/officesuppliesapp"
    ]
}
